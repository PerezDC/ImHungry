@{
    ViewBag.Title = "Who's Hungry - Password Reset";
}

<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="utf-8" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <meta name="description" content="I'm Hungry - web application for hungry people. Don't know what to eat, let us pick a restaurant for you!" />

    <meta name="author" content="David Perez" />

    <title>I'm Hungry</title>

</head>

<body>

    <div id="layoutDefault">

        <div id="layoutDefault_content">

            <main>
                <header class="page-header page-header-dark bg-gradient-primary-to-secondary">

                    <div class="page-header-content pt-15">

                        <div class="container">

                            <div class="row align-items-center">

                                <div class="col-lg-6" data-aos="fade-up">

                                    <h1 class="page-header-title">Reset your password</h1>

                                    <p class="page-header-text mb-5">Enter the email used to sign up and we'll send you a temporary password.</p>

                                    <hr class="my-5" color="#FFFFFF" />

                                    <div class="form-group mr-0 mr-lg-2"><label class="sr-only" for="inputEmail">Enter your email</label><input class="form-control form-control-solid rounded-pill" id="inputEmail" type="email" placeholder="Enter your email..." /></div>
                                    <a class="btn btn-white btn-marketing rounded-pill lift lift-sm" href="ResetPasswordSent">Send it<i class="fas fa-arrow-right ml-1"></i></a>
                                    <a class="btn btn-yellow btn-marketing rounded-pill lift lift-sm" href="Index">Cancel<i class="fas fa-arrow-right ml-1"></i></a>

                                </div>

                                <div class="col-lg-6 d-none d-lg-block" data-aos="fade-up" data-aos-delay="50"><img class="img-fluid" src="~/ImgContainer/PNGs/maletechnologist.png" /></div>

                            </div>

                        </div>

                    </div>

                    <div class="svg-border-rounded text-white">

                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 144.54 17.34" preserveAspectRatio="none" fill="currentColor"><path d="M144.54,17.34H0V0H144.54ZM0,0S32.36,17.34,72.27,17.34,144.54,0,144.54,0"></path></svg>

                    </div>

                </header>
            </main>

        </div>

        <div id="layoutDefault_footer">

            <footer class="footer pt-10 pb-5 mt-auto bg-white footer-light">

                <div class="container">
                    <hr class="my-5" />

                    <div class="row align-items-center">

                        <div class="col-md-6 small">Copyright &copy; David Perez 2020</div>

                        <div class="col-md-6 text-md-right small">

                            <a href="javascript:void(0);">Privacy Policy</a>

                            &middot;

                            <a href="javascript:void(0);">Terms &amp; Conditions</a>

                        </div>

                    </div>

                </div>

            </footer>

        </div>

    </div>

</body>

</html>

